		<script>
			let menu = document.getElementById("menu");
			let btn = menu.getElementsByTagName("div");
	
			for(let i = 0; i < btn.length; i++){
			    btn[i].addEventListener("click", function(){
			        let action = btn[i].getAttribute("data-action");
			        if(action){
			        	menu.action = action;
			            menu.submit();
			        }
			    });
			};
		</script>
