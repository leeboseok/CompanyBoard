@charset "UTF-8";
/* html과 body에 전체 높이 적용하여 콘텐츠를 중앙에 배치 */
html, body {
    height: 100%;
    margin: 0;
}

/* html의 배경 스타일링 */
html {
    background-image: url('../images/hero-earth.jpg');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
}

/* body의 콘텐츠 중앙 배치 및 스타일 설정 */
body {
    display: flex;
    justify-content: center;
    align-items: center;
}

/* 컨테이너 스타일링 */
#wrap {
    width: 360px; /* 너비 줄임 */
    padding: 15px; /* 패딩 줄임 */
    background-color: rgba(0, 14, 51, 0.7);
    border-radius: 8px; /* 테두리 반경 줄임 */
    box-shadow: 0 3px 6px rgba(0, 0, 0, 0.5); /* 그림자 줄임 */
    transform: translateY(-80px); /* 변환 조정 */
}

/* 폼 요소 일반 스타일링 */
form > div {
    text-align: center;
    padding: 8px; /* 패딩 줄임 */
    font-size: 18px; /* 글꼴 크기 줄임 */
    font-weight: 600;
    color: white;
}

/* 폼 요소의 hover 효과 */
form > div:hover {
    color: gray;
}

/* 제목 스타일링 */
h1 {
    text-align: center;
    color: white;
    font-size: 24px; /* 제목의 글꼴 크기 줄임 */
}

/* 입력 필드 및 select 요소 스타일링 */
input[type="email"],
input[type="password"],
input[type="text"],
input[type="file"],
select {
    width: calc(100% - 30px); /* 너비 줄임 */
    padding: 8px; /* 패딩 줄임 */
    margin: 8px 0; /* 마진 줄임 */
    font-size: 14px; /* 글꼴 크기 줄임 */
}

/* 제출 버튼 스타일링 */
input[type="submit"] {
    padding: 8px 15px; /* 패딩 줄임 */
    font-size: 16px; /* 글꼴 크기 줄임 */
    font-weight: 600;
    background-color: #007BFF;
    color: white;
    border: none;
    border-radius: 4px; /* 테두리 반경 줄임 */
    cursor: pointer;
}

/* 제출 버튼의 hover 효과 */
input[type="submit"]:hover {
    background-color: #0056b3;
}